{
    "name": "shipwire",
    "display": "Shipwire",
    "description": "Order fulfillment and tracking using Shipwire",
    "help": "http://guides.spreecommerce.com/integration/endpoints/shipwire",
    "icon_url": "shipwire.png",
    "services": [
        {
            "name": "order",
            "path": "/order",
            "description": "Send order details to Shipwire on completion",
            "requires": {
                "parameters": [
                    {
                        "name": "username",
                        "description": "Shipwire username"
                    },
                    {
                        "name": "password",
                        "description": "Shipwire password"
                    }
                ]
            },
            "recommends": {
                "messages": [
                    "order:new"
                ]
            },
            "produces": {}
        },
        {
            "name": "tracking",
            "path": "/tracking",
            "description": "Track order shipment dispatches.",
            "requires": {
                "parameters": [
                    {
                        "name": "username",
                        "description": "Shipwire username"
                    },
                    {
                        "name": "password",
                        "description": "Shipwire password"
                    }
                ]
            },
            "recommends": {
                "messages": [
                    "shipment:confirm:poll"
                ]
            },
            "produces": {
                "messages": [
                    {
                        "message": "shipment:confirm",
                        "schema": "/shipment_confirm.json"
                    }
                ]
            }
        }
    ]
}
